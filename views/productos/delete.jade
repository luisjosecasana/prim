extends ../layout.jade
block contenido
	div(class="col-md-5 center-block quitar-float top-space text-left")
		h1 Eliminar registro #[span= producto.title]
		form(method="POST" action="/productos/#{producto.id}?_method=delete" style="margin-top:1.5em;")
			div(class="form-group")
				label Contraseña
				input(type="number" name="password" placeholder="ingrese contraseña" class="form-control")
			div(class="form-group text-right")
				input(type="submit" class="btn btn-info" value="Guardar")